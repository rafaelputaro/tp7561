services:
{% for i in range(1, number_of_pairs + 1) %}
  peer-{{ i }}:
    container_name: peer-{{ i }}
    image: peer:latest
    ports:
      - "50051:50051"  # Puerto gRPC
    environment:
      - PEER_NAME=peer-{{ i }}
      - PEER_HOST=peer-{{ i }}
      - PEER_PORT=50051
      - ENTRIES_PER_K_BUCKET={{ entries_per_k_bucket }}
    networks:
      - tp_net
{% if i < number_of_pairs %}
    depends_on:
{% for i in range(i+1, i + 2) %}
      - peer-{{ i }}
{%- endfor -%}
{% endif %}
{% endfor %}

networks:
  tp_net:
    ipam:
      driver: default
      config:
        - subnet: 172.25.125.0/24