services:
{% for i in range(1, number_of_pairs + 1) %}
  peer-{{ i }}:
    container_name: peer-{{ i }}
    image: peer:latest
    ports:
      - "{{ 50050 + i }}:50051"
    volumes:
      - {{ host_folder }}{{ input_data_folder }}/peer-{{ i }}:/tmp{{ input_data_folder }}
      - {{ host_folder }}/peer-{{ i }}:{{ app_folder }}
    environment:
      - PEER_NAME=peer-{{ i }}
      - PEER_HOST=peer-{{ i }}
      - PEER_PORT=50051
      - ENTRIES_PER_K_BUCKET={{ entries_per_k_bucket }}
      - LOGIN_FORMAT_FOR_KEYS={{ login_format_for_keys }}
      - INPUT_DATA_FOLDER=/tmp{{ input_data_folder }}
      - STORE_IPFS_FOLDER={{ app_folder }}{{ store_folder }}
      - SEARCH_WORKERS={{ search_workers }}
      - NUMBER_OF_PAIRS={{ number_of_pairs }}
    networks:
      - tp_net
{% if i < number_of_pairs %}
    depends_on:
{% for i in range(i+1, i + 2) %}
      - peer-{{ i }}
{%- endfor -%}
{% endif %}
{% endfor %}

{% for i in range(1, number_of_clients + 1) %}
  client-{{ i }}:
    container_name: client-{{ i }}
    image: client:latest
    ports:
      - "{{ 50050 + i + number_of_pairs }}:50051"
    volumes:
      - {{ host_folder }}{{ input_data_folder }}/client-{{ i }}:/tmp{{ input_data_folder }}
      - {{ host_folder }}/client-{{ i }}:{{ client_folder }}
    environment:
      - CLIENT_NAME=client-{{ i }}
      - CLIENT_HOST=client-{{ i }}
      - CLIENT_PORT=50051
      - LOGIN_FORMAT_FOR_KEYS={{ login_format_for_keys }}
      - INPUT_DATA_FOLDER=/tmp{{ input_data_folder }}
      - STORE_FOLDER={{ client_folder }}{{ store_folder }}
      - NUMBER_OF_PAIRS={{ number_of_pairs }}
      - NUMBER_OF_CLIENTS={{ number_of_clients }}
    networks:
      - tp_net
    depends_on:
      - peer-{{ number_of_pairs }}
{% endfor %}

networks:
  tp_net:
    ipam:
      driver: default
      config:
        - subnet: 172.25.125.0/24